{
  "name": "drone-defense",
  "module": "src/main.ts",
  "type": "module",
  "scripts": {
    "dev": "bun --hot run public/index.html",
    "build": "bun build ./src/main.ts --outdir ./dist --target browser",
    "typecheck": "bun run tsc --noEmit",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/bun": "^1.2.19",
    "bun-types": "latest",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2"
  },
  "peerDependencies": {
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "effect": "^3.17.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "bun run tsc --noEmit"
    ]
  }
}
